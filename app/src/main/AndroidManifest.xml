<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="peaceinfotech.malegaonbazar">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Vendor.Fragment.FragmentOfferList"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".Signup.SignUpActivity" />
        <activity android:name=".Signup.RegisterActivity" />
        <activity
            android:name=".User.UI.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme" />
        <activity android:name=".User.UI.SearchLocation" />
        <activity
            android:name=".Vendor.VendorActivity"
            android:label="@string/title_activity_vendor"
            android:theme="@style/AppTheme" />
        <activity android:name=".User.UI.DirectionActivity" />
        <activity android:name=".User.UI.OfferInformationActivity" />
    </application>

</manifest>