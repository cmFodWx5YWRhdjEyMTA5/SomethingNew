<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.SignUpActivity"
    android:background="@drawable/back_login"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/lay_reference"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="120dp">

        <EditText
            android:id="@+id/etmobile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Mobile"/>
        <TextView
            android:id="@+id/tvwmobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Valid Mobile Number"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/btsubmit_back"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layotp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="@drawable/background"
        android:elevation="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Please enter the OTP"
            android:textSize="20sp" />

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:inputType="number" />

        <TextView
            android:id="@+id/warnotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Incorrect OTP"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btveruser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btsubmit_back"
                android:layout_margin="10dp"
                android:text="Verify as User"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btsubmit_back"
                android:layout_margin="10dp"
                android:text="Verify as Vendor"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:id="@+id/btverven"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>