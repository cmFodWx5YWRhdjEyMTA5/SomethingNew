<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartUI.LaunchActivity"
    android:background="@drawable/back_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="SKIP"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_skip"/>


    <LinearLayout
        android:id="@+id/lay_reference"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="320dp">

        <EditText
            android:id="@+id/et_rid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:maxLength="10"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Enter Reference ID"/>
        <TextView
            android:id="@+id/tv_warn_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Please Enter Valid Reference ID"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_rid_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="@drawable/btsubmit_back"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</RelativeLayout>