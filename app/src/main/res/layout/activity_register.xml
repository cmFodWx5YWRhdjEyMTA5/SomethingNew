<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.RegisterActivity"
    android:background="@drawable/back_reg">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background"
        android:elevation="40dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:id="@+id/userlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="* All fields are Mandatory"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Fullname *"
            android:layout_marginTop="20dp"
            android:id="@+id/etusername"
            android:singleLine="true"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Location *"
            android:id="@+id/etuserlocation"
            android:singleLine="true"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Password *"
            android:id="@+id/etuserpass"
            android:inputType="textPassword"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Confirm-Password *"
            android:id="@+id/etuserrepass"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sumbit"
            android:layout_marginTop="20dp"
            android:id="@+id/btusersubmit"
            android:background="@drawable/btsubmit_back"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:id="@+id/vendorlay">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="* All fields are Mandatory"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Full Name *"
            android:layout_marginTop="20dp"
            android:id="@+id/etvenname"
            android:singleLine="true"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Location *"
            android:id="@+id/etvenloc"
            android:singleLine="true"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Brand Name *"
            android:singleLine="true"
            android:id="@+id/etvenbname"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Category *"
            android:singleLine="true"
            android:id="@+id/etvencat"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Services *"
            android:singleLine="true"
            android:id="@+id/etvenser"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo   "
                android:textSize="20sp"
                android:layout_weight="1" />

            <Button
                android:layout_width="63dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/btsubmit_back"
                android:text="Choose\nImage"
                android:textColor="#ffffff"
                android:id="@+id/btlogo"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banner"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="63dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/btsubmit_back"
                android:text="Choose\nImage"
                android:textColor="#ffffff"
                android:id="@+id/btban"
                android:textSize="10sp"/>

        </LinearLayout>


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Email-Id *"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:id="@+id/etvenmail"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Password *"
            android:id="@+id/etvenpass"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Confirm-Password *"
            android:id="@+id/etvenrepass"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sumbit"
            android:layout_marginTop="20dp"
            android:id="@+id/btvensubmit"
            android:background="@drawable/btsubmit_back"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>