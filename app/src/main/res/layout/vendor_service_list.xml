<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/offer_item_list"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:elevation="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Ac-Services"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_service_name"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete"
            android:id="@+id/img_service_del"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_toLeftOf="@+id/img_service_del"
            android:id="@+id/img_service_edit"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_service_desc"
        android:textColor="@color/black"
        android:text="xjvjvxjxcnvcnxvjxcnvjxcnxcknxcncxvnxcvnxcknxckjxcjnxcjnxcnvvxjkxc"/>



</LinearLayout>