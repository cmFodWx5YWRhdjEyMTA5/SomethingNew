<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_background"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Ac-Services"
        android:textColor="@color/black"
        android:id="@+id/tv_service_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_service_desc"
        android:text="xjvjvxjxcnvcnxvjxcnvjxcnxcknxcncxvnxcvnxcknxckjxcjnxcjnxcnvvxjkxc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btsubmit_back"
            android:textColor="@color/white"
            android:id="@+id/bt_service_edit"
            android:layout_toLeftOf="@+id/view_centre"
            android:layout_marginRight="40dp"
            android:text="edit"/>
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/view_centre"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btsubmit_back"
            android:textColor="@color/white"
            android:id="@+id/bt_service_delete"
            android:layout_toRightOf="@+id/view_centre"
            android:layout_marginLeft="40dp"
            android:text="delete"/>

    </RelativeLayout>


</LinearLayout>