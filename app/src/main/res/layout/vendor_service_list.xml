<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_background"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ac-Services"
        android:textColor="@color/black"
        android:id="@+id/tv_service_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_service_desc"
        android:paddingLeft="10dp"
        android:text="xjvjvxjxcnvcnxvjxcnvjxcnxcknxcncxvnxcvnxcknxckjxcjnxcjnxcnvvxjkxc"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/bt_service_edit"
            android:layout_toLeftOf="@+id/view_centre"
            android:gravity="center"
            android:textSize="13sp"
            android:text="EDIT"
            android:textColor="@color/black" />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/view_centre"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/bt_service_delete"
            android:layout_toRightOf="@+id/view_centre"
            android:text="DELETE"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#ff00" />

    </RelativeLayout>


</LinearLayout>