<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/offer_item_list"
    android:padding="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Ac-Services"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_service_name"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_options_recycler"
            android:id="@+id/img_service_options"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_service_desc"
        android:textColor="@color/black"
        android:text="xjvjvxjxcnvcnxvjxcnvjxcnxcknxcncxvnxcvnxcknxckjxcjnxcjnxcnvvxjkxc"/>



</LinearLayout>